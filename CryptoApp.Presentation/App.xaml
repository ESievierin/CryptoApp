<Application x:Class="CryptoApp.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:CryptoApp.Presentation.Converters;assembly=CryptoApp.Presentation"
             xmlns:views="clr-namespace:CryptoApp.Presentation.Pages"
             xmlns:vm="clr-namespace:CryptoApp.ApplicationCore.ViewModels;assembly=CryptoApp.ApplicationCore">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:MainPageViewModel}">
                <views:MainPage/>
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Converters.xaml"/>
                <ResourceDictionary Source="Resources/CardTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
