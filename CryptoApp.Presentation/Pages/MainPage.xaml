<Page x:Class="CryptoApp.Presentation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:converters="clr-namespace:CryptoApp.Presentation.Converters"
      xmlns:loc="clr-namespace:CryptoApp.Presentation.Localization"
      Title="CryptoApp"
      Background="{DynamicResource PageBackgroundBrush}"
      Foreground="{DynamicResource PrimaryTextBrush}">

    <Page.Resources>
        <converters:PriceWithCurrencyConverter x:Key="PriceWithCurrencyConverter"/>
    </Page.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCoinsCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <DockPanel Margin="0,0,0,10">
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Width="250"
                         Height="25"
                         Background="{DynamicResource InputBackgroundBrush}"
                         Foreground="{DynamicResource PrimaryTextBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         BorderThickness="1"
                         FontSize="14"
                         KeyDown="SearchTextBox_KeyDown"/>

                <Button Content="{loc:Translate Search}"
                        Command="{Binding SearchCoinsCommand}"
                        Width="100"
                        Margin="10,0,0,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="Black"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <ComboBox ItemsSource="{Binding AvailableCurrencies}"
                          SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
                          Width="100"
                          Margin="20,0,0,0"
                          Background="{DynamicResource InputBackgroundBrush}"
                          Foreground="{DynamicResource CheckboxTextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Code, Converter={StaticResource UpperCaseConverter}}"
                                       Foreground="{DynamicResource CheckboxTextBrush}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                          Width="150"
                          Margin="20,0,0,0"
                          Background="{DynamicResource InputBackgroundBrush}"
                          Foreground="{DynamicResource CheckboxTextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource CheckboxTextBrush}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox ItemsSource="{Binding AvailableThemes}"
                          SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                          Width="120"
                          Margin="20,0,0,0"
                          Background="{DynamicResource InputBackgroundBrush}"
                          Foreground="{DynamicResource CheckboxTextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="{DynamicResource CheckboxTextBrush}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Content="{loc:Translate Converter}"
                        Command="{Binding OpenConverterCommand}"
                        Width="120"
                        HorizontalAlignment="Right"
                        Margin="20,0,0,0"
                        Background="{DynamicResource AccentAltBrush}"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </DockPanel>

            <Border Background="{DynamicResource PageBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    MaxHeight="200"
                    Margin="0,0,0,15">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSearchResultsVisible}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding SearchResults}"
                                  ItemTemplate="{StaticResource SearchCoinCardTemplate}">
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <EventSetter Event="MouseLeftButtonUp"
                                             Handler="SearchResult_Click"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <ItemsControl ItemsSource="{Binding Coins}"
                          ItemTemplate="{StaticResource CoinCardTemplate}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
