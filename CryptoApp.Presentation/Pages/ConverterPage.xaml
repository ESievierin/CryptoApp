<Page x:Class="CryptoApp.Presentation.Pages.ConverterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:loc="clr-namespace:CryptoApp.Presentation.Localization"
      Background="{DynamicResource PageBackgroundBrush}"
      Foreground="{DynamicResource PrimaryTextBrush}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="FlatListButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" HorizontalAlignment="Center" Width="600">
              
                <Button Content="{loc:Translate Back}"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"/>
                <TextBlock Text="{loc:Translate CryptoConverter}"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,20">
                    <DockPanel LastChildFill="False">

                        <TextBox Text="{Binding FromAmount, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 FontSize="28"
                                 Width="270"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>

                        <Button Command="{Binding ShowFromSearchCommand}"
                                Background="{DynamicResource InputBackgroundBrush}"
                                BorderThickness="0"
                                Width="270"
                                Height="56">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FromCoin}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <Image Source="{Binding FromCoin.Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FromCoin.Name}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}" FontSize="18"/>
                                        <TextBlock Text="{Binding FromCoin.Symbol}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="{loc:Translate SelectSourceCoin}"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontStyle="Italic"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FromCoin}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Button>

                    </DockPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,20">
                    <DockPanel LastChildFill="False">

                        <TextBox Text="{Binding ToAmount}"
                                 FontSize="28"
                                 Width="270"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 IsReadOnly="True"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Background="{DynamicResource InputBackgroundBrush}"/>

                        <Button Command="{Binding ShowToSearchCommand}"
                                Background="{DynamicResource InputBackgroundBrush}"
                                BorderThickness="0"
                                Width="270"
                                Height="56">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ToCoin}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <Image Source="{Binding ToCoin.Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ToCoin.Name}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}" FontSize="18"/>
                                        <TextBlock Text="{Binding ToCoin.Symbol}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="{loc:Translate SelectTargetCoin}"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontStyle="Italic"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ToCoin}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Button>

                    </DockPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <Border Background="{DynamicResource OverlayBackgroundBrush}"
            Visibility="{Binding IsSearchVisible, Converter={StaticResource BoolToVis}}">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="520"
                    Style="{StaticResource CardStyle}"
                    Padding="16">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="{Binding SearchTitle}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                    </DockPanel>

                    <DockPanel Margin="0,0,0,10">
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Width="360"
                                 Height="28"
                                 FontSize="22"
                                 VerticalAlignment="Center"
                                 Background="{DynamicResource InputBackgroundBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"/>
                        <Button Content="{loc:Translate Search}"
                                Command="{Binding SearchCoinsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="120"
                                Margin="10,0,0,0"/>
                    </DockPanel>

                    <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6">
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SearchResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource FlatListButton}"
                                                Command="{Binding DataContext.SelectCoinCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Name}" FontSize="16" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <TextBlock Text="{Binding Symbol}" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
