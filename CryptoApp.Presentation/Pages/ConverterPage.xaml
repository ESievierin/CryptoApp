<Page x:Class="CryptoApp.Presentation.Pages.ConverterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#121212"
      Foreground="White">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="FlatListButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" HorizontalAlignment="Center" Width="520">

                <Button Content="← Back"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"/>

                <TextBlock Text="Crypto Converter"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E676"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,20">
                    <DockPanel LastChildFill="False">

                        <TextBox Text="{Binding FromAmount, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#2A2A2A"
                                 BorderBrush="#2A2A2A"
                                 Foreground="White"
                                 FontSize="28"
                                 Width="240"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>

                        <Button Command="{Binding ShowFromSearchCommand}"
                                Background="#2A2A2A"
                                BorderThickness="0"
                                Width="240">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding FromCoin.Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding FromCoin.Name, TargetNullValue=Select coin}" Foreground="White"  FontSize="18"/>
                                    <TextBlock Text="{Binding FromCoin.Symbol}" Foreground="Gray" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,20">
                    <DockPanel LastChildFill="False">
                        <TextBox Text="{Binding ToAmount}"
                                 FontSize="28"
                                 Width="240"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 IsReadOnly="True"
                                 Foreground="White"
                                 BorderBrush="#2A2A2A"
                                 Background="#2A2A2A"/>

                        <Button Command="{Binding ShowToSearchCommand}"
                                Background="#2A2A2A"
                                BorderThickness="0"
                                Width="240">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding ToCoin.Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding ToCoin.Name, TargetNullValue=Select coin}" Foreground="White"  FontSize="18"/>
                                    <TextBlock Text="{Binding ToCoin.Symbol}" Foreground="Gray" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <Border Background="#AA000000"
                Visibility="{Binding IsSearchVisible, Converter={StaticResource BoolToVis}}">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="520"
                    Style="{StaticResource CardStyle}"
                    Padding="16">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="{Binding SearchTitle}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#00E676"
                                   Margin="0,0,0,12"/>
                    </DockPanel>

                    <DockPanel Margin="0,0,0,10">
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Width="360"
                                 Height="28"
                                 FontSize="22"
                                 VerticalAlignment="Center"/>
                        <Button Content="Search"
                                Command="{Binding SearchCoinsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="120"
                                Margin="10,0,0,0"/>
                    </DockPanel>

                    <Border Background="#1E1E1E" BorderBrush="#2A2A2A" BorderThickness="1" CornerRadius="6">
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SearchResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource FlatListButton}"
                                                Command="{Binding DataContext.SelectCoinCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding Image}" Width="30" Height="30" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Name}" FontSize="16"/>
                                                <TextBlock Text="{Binding Symbol}" Foreground="Gray" Margin="10,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
