<Page x:Class="CryptoApp.Presentation.Pages.CoinDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sp="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
      xmlns:loc="clr-namespace:CryptoApp.Presentation.Localization"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryTextBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <Button Content="{loc:Translate Back}"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20"/>

            <Border Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,20">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding Coin.Image}"
                           Width="90" Height="90"
                           Margin="0,0,20,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="{Binding Coin.Name}" FontSize="30" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Coin.Symbol, Converter={StaticResource UpperCaseConverter}}"
                                   FontSize="18" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,40,0">
                        <TextBlock FontSize="36" FontWeight="Bold">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource PriceWithCurrencyConverter}" Mode="OneWay">
                                    <Binding Path="Coin.CurrentPrice" Mode="OneWay"/>
                                    <Binding Path="DataContext.SelectedCurrency" 
                                             RelativeSource="{RelativeSource AncestorType=Page}" 
                                             Mode="OneWay"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="{Binding Coin.PriceChangePercentage24h, StringFormat={}{0:F2}%}"
                                   Foreground="{Binding Coin.PriceChangePercentage24h, Converter={StaticResource ChangeToBrushConverter}}"
                                   FontSize="22" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                        <TextBlock FontSize="20">
                            <Run Text="{loc:Translate MarketCap}"/>
                            <Run Text=": "/>
                            <Run Text="{Binding Coin.MarketCap, Converter={StaticResource CompactNumberConverter}}"/>
                        </TextBlock>
                        <TextBlock FontSize="20">
                            <Run Text="{loc:Translate FDV}"/>
                            <Run Text=": "/>
                            <Run Text="{Binding Coin.FullyDilutedValuation, Converter={StaticResource CompactNumberConverter}}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="4" VerticalAlignment="Center">
                        <TextBlock FontSize="20">
                            <Run Text="{loc:Translate Volume}"/>
                            <Run Text=": "/>
                            <Run Text="{Binding Coin.TotalVolume, Converter={StaticResource CompactNumberConverter}}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="5" VerticalAlignment="Center">
                        <TextBlock FontSize="20">
                            <Run Text="{loc:Translate Min24h}"/>
                            <Run Text=": "/>
                            <Run>
                                <Run.Text>
                                    <MultiBinding Converter="{StaticResource PriceWithCurrencyConverter}" Mode="OneWay">
                                        <Binding Path="Coin.Min24h" Mode="OneWay"/>
                                        <Binding Path="DataContext.SelectedCurrency"
                                                 RelativeSource="{RelativeSource AncestorType=Page}"
                                                 Mode="OneWay"/>
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                        </TextBlock>
                        <TextBlock FontSize="20">
                            <Run Text="{loc:Translate Max24h}"/>
                            <Run Text=": "/>
                            <Run>
                                <Run.Text>
                                    <MultiBinding Converter="{StaticResource PriceWithCurrencyConverter}" Mode="OneWay">
                                        <Binding Path="Coin.Max24h" Mode="OneWay"/>
                                        <Binding Path="DataContext.SelectedCurrency"
                                                 RelativeSource="{RelativeSource AncestorType=Page}"
                                                 Mode="OneWay"/>
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" Padding="14" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="6,0,6,10">
                        <TextBlock Text="{loc:Translate PriceHistory}"
                                   FontSize="22" FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DataContext.SelectedCurrency.Code, RelativeSource={RelativeSource AncestorType=Page}, Mode=OneWay}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </DockPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="1D"  Command="{Binding ChangeDaysCommand}" CommandParameter="1"  Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                        <Button Content="7D"  Command="{Binding ChangeDaysCommand}" CommandParameter="7"  Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                        <Button Content="30D" Command="{Binding ChangeDaysCommand}" CommandParameter="30" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                        <Button Content="90D" Command="{Binding ChangeDaysCommand}" CommandParameter="90" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                        <Button Content="365D" Command="{Binding ChangeDaysCommand}" CommandParameter="365" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
                    </StackPanel>

                    <Border Grid.Row="1"
                            Background="{DynamicResource CardBackgroundBrush}"
                            CornerRadius="6">
                        <sp:WpfPlot x:Name="PricePlot"
                                    Height="340"
                                    Margin="0,20,0,20" />
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" Padding="20">
                <StackPanel>
                    <TextBlock Text="{loc:Translate Markets}"
                               FontSize="26" FontWeight="Bold" Margin="0,0,0,20"
                               Foreground="{DynamicResource AccentBrush}"/>

                    <ItemsControl ItemsSource="{Binding Coin.Markets}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}"
                                        Width="220"
                                        Padding="15"
                                        Margin="10">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Exchange}"
                                                   FontSize="16" FontWeight="Bold"
                                                   Margin="0,0,0,5"
                                                   TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Pair}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Margin="0,0,0,10"
                                                   TextAlignment="Center"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:F2}}"
                                                       FontSize="18" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Pair, Converter={StaticResource TargetCurrencyConverter}}"
                                                       FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>

                                        <Button Content="{loc:Translate Open}"
                                                Command="{Binding DataContext.OpenMarketCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding TradeUrl}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
