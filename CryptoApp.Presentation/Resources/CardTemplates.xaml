<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:loc="clr-namespace:CryptoApp.Presentation.Localization">

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="BorderBrush" Value="#2A2A2A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8"
                                  ShadowDepth="2"
                                  Color="#000000"
                                  Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#00E676"/>
                <Setter Property="Background" Value="#222222"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.005" ScaleY="1.005"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="CoinCardTemplate">
        <Border Style="{StaticResource CardStyle}" MinHeight="140">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="60" Height="60" CornerRadius="30" Background="#2A2A2A"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="{Binding Image}" Stretch="Uniform" Margin="8"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Symbol, Converter={StaticResource UpperCaseConverter}}"
                               FontSize="14" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0">
                    
                    <TextBlock FontSize="16" FontWeight="SemiBold">
                        <Run Text="{loc:Translate MCap}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding MarketCap, Converter={StaticResource CompactNumberConverter}}"/>
                    </TextBlock>

                    <TextBlock FontSize="14" Foreground="Gray">
                        <Run Text="{loc:Translate FDV}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding FullyDilutedValuation, Converter={StaticResource CompactNumberConverter}}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"
                            Orientation="Vertical" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,10,0">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource PriceWithCurrencyConverter}" Mode="OneWay">
                                    <Binding Path="CurrentPrice" Mode="OneWay"/>
                                    <Binding Path="DataContext.SelectedCurrency"
                                             RelativeSource="{RelativeSource AncestorType=Page}"
                                             Mode="OneWay"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PriceChangePercentage24h, StringFormat={}{0:F2}%}"
                                       Foreground="{Binding PriceChangePercentage24h, Converter={StaticResource ChangeToBrushConverter}}"
                                       FontSize="18" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding PriceChangePercentage24h, Converter={StaticResource ChangeToSymbolConverter}}"
                                       Foreground="{Binding PriceChangePercentage24h, Converter={StaticResource ChangeToBrushConverter}}"
                                       FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="{loc:Translate Details}"
                            Command="{Binding DataContext.OpenCoinCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding Id}"
                            Width="100"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Background="#00E676"
                            Foreground="Black"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>
