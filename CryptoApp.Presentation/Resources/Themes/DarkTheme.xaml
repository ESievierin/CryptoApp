<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBackground">#121212</Color>
    <Color x:Key="PageBackground">#121212</Color>
    <Color x:Key="CardBackground">#1E1E1E</Color>
    <Color x:Key="InputBackground">#2A2A2A</Color>
    <Color x:Key="HoverBackground">#222222</Color>
    <Color x:Key="SecondaryBackground">#2A2A2A</Color>
    <Color x:Key="OverlayBackground">#AA000000</Color>

    <Color x:Key="BorderColor">#2A2A2A</Color>

    <Color x:Key="PrimaryText">#FFFFFF</Color>
    <Color x:Key="CheckboxText">#121212</Color>
    <Color x:Key="SecondaryText">#AAAAAA</Color>
    <Color x:Key="MutedText">#808080</Color>
    <Color x:Key="GrayText">#808080</Color>

    <Color x:Key="AccentColor">#00E676</Color>
    <Color x:Key="AccentAlt">#8A00C4</Color>

    <Color x:Key="ShadowColor">#000000</Color>
    <Color x:Key="ShadowEffectColor">#000000</Color>

    <Color x:Key="ChartFigureBackground">#121212</Color>
    <Color x:Key="ChartDataBackground">#1E1E1E</Color>
    <Color x:Key="ChartAxis">#FFFFFF</Color>
    <Color x:Key="ChartGrid">#80FFFFFF</Color>
    <Color x:Key="ChartLine">#32CD32</Color>
    <Color x:Key="ChartFill">#32CD32</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackground}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush"    Color="{StaticResource PageBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush"    Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush"   Color="{StaticResource InputBackground}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush"   Color="{StaticResource HoverBackground}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackground}"/>
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{StaticResource OverlayBackground}"/>

    <SolidColorBrush x:Key="BorderBrush"            Color="{StaticResource BorderColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush"       Color="{StaticResource PrimaryText}"/>
    <SolidColorBrush x:Key="CheckboxTextBrush"       Color="{StaticResource CheckboxText}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush"     Color="{StaticResource SecondaryText}"/>
    <SolidColorBrush x:Key="MutedTextBrush"         Color="{StaticResource MutedText}"/>
    <SolidColorBrush x:Key="GrayTextBrush"          Color="{StaticResource GrayText}"/>

    <SolidColorBrush x:Key="AccentBrush"            Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentAltBrush"         Color="{StaticResource AccentAlt}"/>

    <SolidColorBrush x:Key="ShadowBrush"            Color="{StaticResource ShadowColor}"/>
    <SolidColorBrush x:Key="ShadowEffectBrush"      Color="{StaticResource ShadowEffectColor}"/>

    <SolidColorBrush x:Key="ChartFigureBackgroundBrush" Color="{StaticResource ChartFigureBackground}"/>
    <SolidColorBrush x:Key="ChartDataBackgroundBrush"   Color="{StaticResource ChartDataBackground}"/>
    <SolidColorBrush x:Key="ChartAxisBrush"             Color="{StaticResource ChartAxis}"/>
    <SolidColorBrush x:Key="ChartGridBrush"             Color="{StaticResource ChartGrid}"/>
    <SolidColorBrush x:Key="ChartLineBrush"             Color="{StaticResource ChartLine}"/>
    <SolidColorBrush x:Key="ChartFillBrush"             Color="{StaticResource ChartFill}"/>
</ResourceDictionary>
